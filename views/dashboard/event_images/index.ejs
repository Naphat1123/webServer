<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Add Files</title>
</head>

<body>

    <div class="container bg-light ">
        <div class="row">
            <aside class='col-3'>
                <%- include ../../layout/dashboard_layout/main_layout.ejs %>
            </aside>
            <main class='col-9'>
                <div class="container" style="margin-top: 50px;">
                    <% if(messages.error) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= messages.error %>
                        </div>
                        <% } %>
                            <% if(messages.success) { %>
                                <div class="alert alert-success" role="alert">
                                    <%= messages.success %>
                                </div>
                                <% } %>

                                    <h1>เพิ่มภาพกิจกรรม</h1>

                                    <a class="btn btn-primary" href='/dashboard/event_images/add'>เพิ่มรายการ</a>
                                    <br>
                                    <br>

                                    <div class="container">
                                        <% if(data.length) { %>
                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">#</th>
                                                        <th scope="col">รายการ</th>
                                                        <th scope="col">ไฟล์แนบ</th>
                                                        <th width="200px">Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% for(let i=0; i < data.length; i++) { %>
                                                        <tr>
                                                            <th scope="row">
                                                                <%= data[i].id %>
                                                            </th>

                                                            <td>
                                                                <%= data[i].title %>
                                                            </td>
                                                            <td>
                                                                <img width="120 px" src="/event_images/<%= data[i].file_images %>" alt="">
                                                            </td>

                                                            <td>
                                                                <a href="/dashboard/event_images/edit/<%= data[i].id %>"
                                                                    class="btn btn-success edit">Edit</a>
                                                                <a href="/dashboard/event_images/delete/<%= data[i].id %>"
                                                                    onclick="return alert('Are you sure?')"
                                                                    class="btn btn-danger delete">Delete</a>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                                </tbody>
                                            </table>
                                            <% } %>

                                                <!-- if result is empty -->
                                                <% if(!data.length) { %>
                                                    <p class="text-center">No File found!</p>
                                                    <% } %>


                                    </div>

                </div>

            </main>

</body>

</html>