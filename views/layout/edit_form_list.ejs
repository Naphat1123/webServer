        <div class="card">
            <div class="card-header">
                Add File
            </div>

            <div class="card-body">
                <form action="/list/<%= name %>/edit/<%= id %>" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>ชื่อผู้ส่ง</label>
                        <input type="text" class="form-control" name="name" value="<%= name %>" >
                    </div>
                    <div class="form-group">
                        <label>รายการ</label>
                        <input type="text" class="form-control" name="title" value="<%= title %>">
                    </div>
                    <div class="form-group">
                        <label>ลักษณะการแจ้ง</label>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="report" value="แจ้งเพื่อทราบ">
                            <label class="form-check-label" for="options1">แจ้งเพื่อทราบ</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="report" value='แจ้งเพื่อดำเนินการ'>
                            <label class="form-check-label" for="options2">แจ้งเพื่อดำเนินการ</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>กำหนดส่ง</label>
                        <input type="date" class="form-control" name="deadline" value="<%= deadline %>">
                    </div>
                    <div class="form-group">
                        <input type="file" name="file" value="<%= file_data %>">
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-info" value="update">
                    </div>
                </form>
            </div>
        </div>