                <div class="card">
                    <div class="card-header">
                        <ul class="nav nav-pills w-100">
                            <li class="nav-link">
                                <%= name %>
                            </li>
                            <li class="nav-link ml-auto">
                                <a href='/list/<%= name %>/add' class="nav-link active">Add File</a>
                            </li>
                        </ul>
                    </div>

                    <div class="card-body">
                        <% if(data.length) { %>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">วันที่</th>
                                        <th scope="col">รายการ</th>
                                        <th scope="col">การแจ้ง</th>
                                        <th scope="col">กำหนดส่ง</th>
                                        <th scope="col">ไฟล์แนบ</th>
                                        <th scope="col">ผู้แจ้ง</th>
                                        <th width="200px">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(let i=0; i < data.length; i++) { %>
                                        <tr>
                                            <th scope="row">
                                                <%= data[i].id %>
                                            </th>
                                            <td>
                                                <%= data[i].date %>
                                            </td>
                                            <td>
                                                <%= data[i].title %>
                                            </td>

                                            <td>
                                                <%= data[i].report %>
                                            </td>

                                            <td>
                                                <%= data[i].deadline %>
                                            </td>
                                            <td>
                                                <a href="/upload/<%= data[i].file_data %>">
                                                    <%= data[i].file_data %>
                                                </a>
                                            </td>
                                            <td>
                                                <%= data[i].name %>
                                            </td>
                                            <td>
                                                <a href="/list/<%= name %>/edit/<%= data[i].id %>"
                                                    class="btn btn-success edit">Edit</a>
                                                <a href="/list/<%= name %>/delete/<%= data[i].id %>"
                                                    onclick="return alert('Are you sure?')"
                                                    class="btn btn-danger delete">Delete</a>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                            <% } %>

                                <!-- if result is empty -->
                                <% if(!data.length) { %>
                                    <p class="text-center">No File found!</p>
                                    <% } %>
                    

                </div>
