<% if(messages.error) { %>
    <div class="alert alert-danger" role="alert">
        <%= messages.error %>
    </div>
    <% } %>
        <% if(messages.success) { %>
            <div class="alert alert-success" role="alert">
                <%= messages.success %>
            </div>
            <% } %>

            <a href="/list" class="btn btn-primary">go back</a>
